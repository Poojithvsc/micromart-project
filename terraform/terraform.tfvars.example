# =============================================================================
# MicroMart - Terraform Variables Example
# =============================================================================
# Copy this file to terraform.tfvars and fill in your values.
# terraform.tfvars is gitignored to prevent committing sensitive data.
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars
#   # Edit terraform.tfvars with your values
#   terraform init
#   terraform plan
#   terraform apply
# =============================================================================

# -----------------------------------------------------------------------------
# General Configuration
# -----------------------------------------------------------------------------
project_name = "micromart"
environment  = "dev"  # Options: dev, staging, prod
owner        = "YourName"

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------
aws_region = "us-east-1"

# -----------------------------------------------------------------------------
# VPC Configuration
# -----------------------------------------------------------------------------
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs  = ["10.0.10.0/24", "10.0.11.0/24"]
enable_nat_gateway    = false  # Set to true if private subnets need internet access (~$32/month)

# -----------------------------------------------------------------------------
# EC2 Configuration
# -----------------------------------------------------------------------------
ec2_instance_type    = "t3.medium"  # t3.small for dev, t3.medium for staging, t3.large for prod
ec2_key_name         = ""           # Leave empty to use SSM Session Manager instead of SSH
ec2_root_volume_size = 30           # GB

# SSH access (only if you set ec2_key_name)
# allowed_ssh_cidrs = ["YOUR_IP/32"]  # Replace with your IP

# -----------------------------------------------------------------------------
# RDS Configuration
# -----------------------------------------------------------------------------
rds_instance_class       = "db.t3.micro"  # Smallest instance, good for dev
rds_allocated_storage    = 20             # GB
rds_engine_version       = "15.4"
rds_multi_az             = false          # Set to true for production
rds_skip_final_snapshot  = true           # Set to false for production

# IMPORTANT: Change these values!
rds_master_username = "postgres"
rds_master_password = "YourSecurePassword123!"  # Min 8 characters

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------
# Leave empty for auto-generated name, or specify your own
s3_bucket_name           = ""
s3_enable_versioning     = true
s3_lifecycle_expiration_days = 90

# -----------------------------------------------------------------------------
# Application Configuration (Optional)
# -----------------------------------------------------------------------------
# jwt_secret = "your-super-secret-jwt-key-at-least-32-characters"
